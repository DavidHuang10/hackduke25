{
    "name": "Screen Time Analysis & Report",
    "description": "Tracks the time spent on different websites and provides analytics.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "alarms",
        "notifications",
        "idle"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ]
  }