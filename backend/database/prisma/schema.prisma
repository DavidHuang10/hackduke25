generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  actions   Action[]
}

model Action {
  id     Int      @id @default(autoincrement())
  userId Int
  domain String?
  time   DateTime @default(now())
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
